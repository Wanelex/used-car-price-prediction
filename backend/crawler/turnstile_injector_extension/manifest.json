{
  "manifest_version": 3,
  "name": "Turnstile Token Injector",
  "version": "1.0.0",
  "description": "Injects Turnstile CAPTCHA solutions",
  "permissions": [
    "scripting",
    "webRequest",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["injector.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
